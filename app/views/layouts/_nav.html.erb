<div class="ui small inverted menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <div class="right menu">
      <% if logged_in? %>
        <div class="ui dropdown item">
          Account <i class="dropdown icon"></i>
          <div class="menu">
              <%= link_to "Log Out", logout_path, class: "item", method: :delete %>
          </div>
        </div>
      <% end %>
      <% if !logged_in? %>
        <div class="item">
            <%= link_to "Log In", login_path, class: "ui primary button" %>
        </div>
        <div class="item">
            <%= link_to "Sign Up", signup_path, class: "ui primary button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
